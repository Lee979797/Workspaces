<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reimburse.com.ninemax.sys.dao.SysProjectDao">
    <sql id="pageWhere">
        <where>
            <if test="username!=null and username !=''">
                name like concat("%",#{username},"%")
            </if>
        </where>
    </sql>
    <select id="findAll" resultType="sysProject">
        select *
        from sys_project;
    </select>
    <select id="findAllProject" resultType="sysProject">
        select *
        from sys_project
        <include refid="pageWhere"/>
        order by id desc
        limit #{startIndex},#{pageSize}
    </select>
    <select id="getRowCount" resultType="int">
        select count(*) from sys_project
        <include refid="pageWhere"/>
    </select>
    <select id="findObjects" resultType="checkBoxType">
        select
            id,
            expenseType
        from sys_expensetype
    </select>
    <select id="findObjectById" resultType="sysProject">
        select *
        from sys_project
        where id = #{id}
    </select>
    <delete id="doDeleteById">
        delete from sys_project
        where id = #{id}
    </delete>
    <insert id="insertObject" parameterType="sysProject" useGeneratedKeys="true" keyProperty="id">
        insert into sys_project (name, note, createdTime, createdUser)
        values (#{name}, #{note}, now(), #{createdUser})
    </insert>
    <update id="updateProject" parameterType="sysProject">
        UPDATE sys_project
        SET
        <if test="name!=null and name!=''">name = #{name},</if>
        <if test="note!=null and note!=''">note = #{note},</if>
        <if test="modifiedUser!=null and modifiedUser!=''">modifiedUser = #{modifiedUser},</if>
        modifiedTime = now()
        WHERE id = #{id}
    </update>
</mapper>
